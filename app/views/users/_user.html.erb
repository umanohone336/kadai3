<table class="table table-user">
  <h2>User info</h2>
  <thead>
    <tr>
      <%= image_tag user.get_profile_image(100,100) %>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td>Name</td>
      <td><%= user.name %></td>
    </tr>
    <tr>
      <td>Introduction</td>
      <td><%= user.introduction %></td>
    </tr>
    <tr>
      <th colspan="2">
        <%= link_to edit_user_path(user), class:"btn btn-default btn-block" do %>
        <i class="fas fa-user-cog"></i>
      <% end %>
      </th>
    </tr>
  </tbody>
</table>
